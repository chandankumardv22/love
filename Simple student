<!DOCTYPE html>
<html>
<head>
  <title>Simple Image Gallery Filter</title>
  <style>
    .gallery-item {
      margin: 5px;
      display: inline-block;
    }
    .gallery-item img {
      width: 100px;
      height: 100px;
    }
  </style>
</head>
<body>
  <h2>Image Gallery</h2>

  <!-- Filter Buttons -->
  <button onclick="filterGallery('All')">All</button>
  <button onclick="filterGallery('Nature')">Nature</button>
  <button onclick="filterGallery('Animals')">Animals</button>

  <!-- Gallery Items -->
  <div class="gallery-item" data-category="Nature">
    <img src="https://example.com/nature1.jpg" alt="Nature 1">
  </div>
  <div class="gallery-item" data-category="Animals">
    <img src="https://example.com/animal1.jpg" alt="Animal 1">
  </div>
  <div class="gallery-item" data-category="Nature">
    <img src="https://example.com/nature2.jpg" alt="Nature 2">
  </div>

  <script>
    function filterGallery(category) {
      const items = document.querySelectorAll('.gallery-item');
      items.forEach(item => {
        item.style.display = (category === 'All' || item.dataset.category === category) ? 'inline-block' : 'none';
      });
    }
  </script>
</body>
</html>
